{
  "AppSettings": {
    "DefaultApiVersion": 1.0
  },
  "Jwt": {
    "Key": "",
    "Issuer": "",
    "Audience": ""
  },
  "NLog": {
    "extensions": [
      {
        "assembly": "NLog.Extensions.Logging"
      }
    ],
    "targets": {
      "allFile": {
        "type": "File",
        "fileName": "C:\\Temp\\AdvBackend-${shortdate}.log",
        "layout": "${longdate} [${uppercase:${level}}] ${message}"
      }
    },
    "rules": [
      {
        "logger": "AdvancedSystems.Backend.*",
        "minLevel": "Debug",
        "writeTo": "allFile"
      }
    ]
  }
}
